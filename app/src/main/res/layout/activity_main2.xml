                android:textSize="12sp" />
            <TextView
                android:id="@+id/textView20"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView19"
                android:layout_toRightOf="@id/textView7"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-medium"
                android:text="Creme de lait"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/textView21"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView20"
                android:layout_toRightOf="@id/textView7"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-medium"
                android:text="1 poule"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/textView22"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView21"
                android:layout_toRightOf="@id/textView7"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-medium"
                android:text="Beurre"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/textView23"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView22"
                android:layout_toRightOf="@id/textView7"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-medium"
                android:text="Clous de girofle"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/textView24"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView17"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-medium"
                android:text="Farine"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/textView25"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView23"
                android:layout_toRightOf="@id/textView7"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-medium"
                android:text="Riz"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/nav_boissons_view"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@id/nav_desserts_view"
                android:layout_marginTop="8dp"
                android:background="@drawable/madera_simulada"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nav_desserts_view"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:text="Je cuisine"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/nav_boisson_1"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@id/nav_desserts_view"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:text="commencer"
                android:textAllCaps="true"
                android:background="#a75e29"
                android:textColor="#ffffff"/>


        </RelativeLayout>
    </ScrollView>
</LinearLayout>
