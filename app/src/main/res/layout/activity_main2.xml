                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Budget"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nav_diff"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Moyen"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nav_temps"
                android:layout_toRightOf="@id/textView6"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-medium"
                android:text="Preparation:20m"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView12"
                android:layout_toRightOf="@id/textView6"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-medium"
                android:text="Cuisson:40m"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nav_budget"
                android:layout_toRightOf="@id/nav_temps"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="20 Euros"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/nav_diff"
                android:layout_below="@id/nav_entrees_view"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/linea"
